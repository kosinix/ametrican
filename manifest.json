{

  "manifest_version": 2,
  "name": "Ametrican",
  "version": "0.3.0",
  "description": "Convert Murican! units into something the rest of the world understands.",

  "author": "Nico Amarilla",
  "homepage_url": "https://github.com/kosinix/ametrican",
  "developer": {
    "name": "kosinix",
    "url": "https://www.kosinix.com"
  },
  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "activeTab",
    "contextMenus"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  }
}